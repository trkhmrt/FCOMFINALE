@using DtoLayer.Concrete
@model UserUpdateDto

<form asp-action="UserUpdate" method="post">
    <div class="container">
        <div class="mb-3">

            <div class="input-group">
                <span class="input-group-text" id="basic-addon3">Username</span>
                <input value="@Model.UserName" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4" asp-for="@Model.UserName">
            </div>

        </div>
        <div class="mb-3">

            <div class="input-group">
                <span class="input-group-text" id="basic-addon3">Firstname</span>
                <input value="@Model.FirstName" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4" asp-for="@Model.FirstName">
            </div>

        </div>
        <div class="mb-3">

            <div class="input-group">
                <span class="input-group-text" id="basic-addon3">Lastname</span>
                <input value="@Model.LastName" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4" asp-for="@Model.LastName">
            </div>

        </div>
        <div class="mb-3">

            <div class="input-group">
                <span class="input-group-text" id="basic-addon3">Email</span>
                <input value="@Model.Email" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4" asp-for="@Model.Email">
            </div>

        </div>
        <div class="mb-3">

            <div class="input-group">
                <span class="input-group-text" id="basic-addon3">Phone</span>
                <input value="@Model.PhoneNumber" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4" asp-for="@Model.PhoneNumber">
            </div>

        </div>

        <input type="submit" class="btn btn-success" />



    </div>
</form>